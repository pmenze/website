---
import { HelloComponent } from '../components/hello.component';
---

  
  <html>
    <body>

    <div class="mask">
      <h1 class="signature centeredText">
        Willkommen
      </h1>
      <img src="flughafensee-klein.jpg" alt="Strand am Flughafensee"/>
    </div>
    <div class="space">
      <HelloComponent client:visible />
    </div>
  </body>
  
  <style>
    body  {
      margin: 0;
      background-color: seagreen;
    }
    HelloComponent {
      background-color: brown;
    }
    img {
      width: 100%;
      height: auto;
    }
    .space {
      margin: 1000px 200px;
    }
    .signature {
      font-family: barokahsignature;
    }
    .centeredText {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .mask {
      position: relative;
      text-align: center;
      color: navajowhite;
      mask-image: linear-gradient(
        to bottom,
        rgba(0,0,0,1) 0 75%,
        rgba(255,255,255,0)
      );
      -webkit-mask-image: linear-gradient(
        to bottom,
        rgba(0,0,0,1) 0 75%,
        rgba(255,255,255,0)
      );
    }
    @font-face {
      font-family: barokahsignature;
      src: url('/fonts/BarokahSignatureRegular-PK15Z.ttf') ;
    }

  </style>
</html>
